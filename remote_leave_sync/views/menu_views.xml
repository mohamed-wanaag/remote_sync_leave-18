<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Menu Action for Sync Config -->
    <record id="action_leave_sync_config" model="ir.actions.act_window">
        <field name="name">Leave Sync Configuration</field>
        <field name="res_model">leave.sync.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first leave sync configuration
            </p>
            <p>
                Configure synchronization with remote Odoo databases to manage employee leave centrally.
            </p>
        </field>
    </record>

    <!-- Menu Item under Time Off -->
    <menuitem id="menu_leave_sync_config"
              name="Remote Sync Config"
              parent="hr_holidays.menu_hr_holidays_root"
              action="action_leave_sync_config"
              groups="hr_holidays.group_hr_holidays_manager"
              sequence="100"/>

</odoo>